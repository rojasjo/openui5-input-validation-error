<mvc:View
	controllerName="joserojas.bookshop.bookshop.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="page"
		title="{i18n>title}">
		<Title text="Welcome" />
		<Table
			id="booksTable"
			items="{/Books}"
			mode="SingleSelectMaster"
			selectionChange="onSelectBook">
			<headerToolbar>
				<Toolbar>
					<Title
						text="Books"
						level="H2" />
				</Toolbar>
			</headerToolbar>

			<columns>
				<Column>
					<Text text="ID" />
				</Column>
				<Column>
					<Text text="Title" />
				</Column>
				<Column>
					<Text text="Stock" />
				</Column>
				<Column>
					<Text text="Price" />
				</Column>
			</columns>

			<items>
				<ColumnListItem>
					<cells>
						<Text text="{ID}" />
						<Text text="{title}" />
						<Text text="{stock}" />
						<Text text="{price}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>
